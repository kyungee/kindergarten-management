
<%- layout('base') %>

<!-- Begin page heading -->
<h1 class="page-heading">유치원생 관리 프로그램 <small>Database 디빙디밍조</small></h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
  <li><a href="/"><i class="fa fa-home"></i></a></li>
  <li><a href="/kids">유치원생 관리</a></li>
  <li class="active">유치원생 상세보기</li>
</ol>
<!-- End breadcrumb -->

<div class="the-box no-border property-list">
  <div class="media">
    <br/><br/>
    <form id="AddKindergardenerForm" method="post" class="form-horizontal" action="/kids/edit/<%= kid.idx %>"
              enctype="multipart/form-data"
              data-bv-message="This value is not valid"
              data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
              data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
              data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

              <div class="form-group">
                <label class="col-lg-3 control-label">Class</label>
                <div class="col-lg-4">
                  <select class="form-control" name="class">
                    <option value="<%= kid.class %>">-- 담당 반 선택 --</option>
                    <option value="병아리반">병아리반</option>
                    <option value="코끼리반">코끼리반</option>
                    <option value="팬더반">팬더반</option>
                    <option value="펭귄반">펭귄반</option>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">Name</label>
                <div class="col-lg-4">
                  <input type="text" class="form-control" name="name" placeholder="원생이름" value="<%= kid.name %>" />
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">Gender</label>
                <div class="col-lg-4">
                  <div class="radio">
                    <label>
                      <input type="radio" name="gender" value="0" <%= male %> /> Male
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="gender" value="1" <%= female %> /> Female
                    </label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">Birthday</label>
                <div class="col-lg-4">
                  <input type="text" class="form-control datepicker" name=birthday
                         data-date-format="yy-mm-dd" placeholder="yy-mm-dd">
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">Address</label>
                <div class="col-lg-4">
                  <input type="text" class="form-control" name="address"
                         value="<%= kid.address %>"/>
                </div>
              </div>

              <div class="form-group">
                <label class="col-lg-3 control-label">H.P</label>
                <div class="col-lg-4">
                  <input type="text" class="form-control" name="phonenum"
                         value="<%= kid.phone_num %>"/>
                </div>
              </div>

              <div class="form-group">
              <label class="col-lg-3 control-label">Photo</label>
                <div class="col-lg-4">
                  <input class="note-image-input" type="file" name="photo" accept="image/*">
                </div><!-- /.input-group -->
              </div><!-- /.form-group -->

            <div class="form-group">
              <div class="col-lg-9 col-lg-offset-3">
                <button type="submit" class="btn btn-primary">EDIT</button>
              </div>
            </div>
          </form>
  </div><!-- /.media -->
</div><!-- /.the-box no-border -->

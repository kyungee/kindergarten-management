
<%- layout('base') %>

<!-- Begin page heading -->
<h1 class="page-heading">유치원생 관리 프로그램 <small>Database 디빙디밍조</small></h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
  <li><a href="/"><i class="fa fa-home"></i></a></li>
  <li><a href="/kids">유치원생 관리</a></li>
  <li class="active">유치원생 리스트</li>
  <a href="/kids/add"><i class="fa fa-home">&nbsp;원생 추가</i></a>
</ol>
<!-- End breadcrumb -->

<div class="row">
  <div class="col-md-12">
    <h4 class="small-heading more-margin-bottom">ALL FRIEND</h4>
    <div class="row">
      <% for(var i=0; i < kids.length; i++) { %>
      <div class="col-sm-3">
        <!-- BEGIN USER CARD LONG -->
        <div class="the-box no-border">
          <div class="media user-card-sm">
            <a class="pull-left" href="#fakelink">
            <img class="media-object img-circle" src="/uploads/<%= kids[i].photo %>" alt="Avatar">
            </a>
            <div class="media-body">
            <h4 class="media-heading"><%= kids[i].name %></h4>
            <p class="text-success">@<%= kids[i].class %></p>
            </div>
            <div class="right-button">
              <button class="btn btn-success" onclick="location.href='/kids/detail/<%= kids[i].idx%>'"><i class="fa fa-search"></i></button>
            </div><!-- /.right-button -->
          </div>
        </div><!-- /.the-box .no-border -->
        <!-- BEGIN USER CARD LONG -->
      </div><!-- /.col-sm-3 -->
      <% } %>
    </div><!-- /.row -->
  </div><!-- /.col-md-8 -->
</div><!-- /.row -->
